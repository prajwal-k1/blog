<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog</title>
  </head>
  <body>
    <div class="container">
      <h2>Articles</h2>
      <a class="btn btn-success mb-4" href="/articles/new">New Article</a>
      <% articles.forEach(article => { %>
      <div class="card mb-3">
        <div class="card-body">
          <h3 class="card-title"><%= article.heading %></h3>
          <p class="text-muted card-subtitle">
            <%= article.time.toLocaleDateString() %>
          </p>
          <p class="card-text"><%= article.body %></p>
        </div>
        <a href="/articles/<%= artcile.id %>">Read More</a>
        <form action="/articles/<%=article.id%>?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% }) %>
    </div>
  </body>
</html>
