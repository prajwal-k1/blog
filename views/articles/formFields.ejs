<div class="form-group">
  <label for="title">Title of Article</label>
  <input
    value="<%= article.heading %>"
    required
    type="text"
    class="form-control"
    name="title"
    id="title"
  />
</div>

<div class="form-group">
  <label for="description">Description of Article</label>
  <textarea name="description" id="description" class="form-control">
 <%= article.description %> </textarea
  >
</div>

<div class="form-group mb-4">
  <label for="markdown">Markdown of Article</label>
  <textarea name="markdown" id="markdown" class="form-control">
 <%= article.markdown %> </textarea
  >
</div>

<a href="/" class="btn btn-danger">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>
